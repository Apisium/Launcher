{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noEmit": true,
    "jsx": "react",
    "lib": ["webworker", "scripthost", "dom"]
  },
  "include": [
    "src"
  ]
}
